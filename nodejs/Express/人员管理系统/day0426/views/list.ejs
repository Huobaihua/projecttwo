<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        a{
            text-decoration: none;
        }
        h1{
            text-align: center;
            color: skyblue;
        }
        form{
            text-align: center;
        }
        #submit{
            border: none;
            background-color: antiquewhite;
            text-align: center;
            font-size: 20px;
            border-radius: 10px;
            width: 120px;
            line-height: 50px;
        }
        table{
            margin-top: 20px;
            text-align: center;
            border: 1px solid black;
            border-collapse:collapse
            
            
        }
        th{
            padding: 10px;
            background-color: rgba(183, 183, 204, 0.272);
        }
        tr,td{
            border-bottom: 1px solid;
            padding: 20px;
            background-color: rgb(250, 246, 246); 
        }
        
       
    </style>
</head>
<body>
    <div id="msg"></div>
    <div id="quit"></div>
    <h1>学生显示页面</h1>
    <form action="/add">
    <input type="submit" value="添加学生" id="submit">
    </form>

    <form action="/search" method="post">
        <input type="text" placeholder="请输入学生姓名" id="search" name="tname">
        <input type="submit" value="查询">
    </form>

    <table align="center">
    <tr>
        <th>sid</th>
            <th>姓名</th>
            <th>年龄</th>
            <th>手机号</th>
            <th>班级</th>
            <th>操作</th>
         </tr>
        <%arr.forEach(item => {%>
            <tr>
                <td><%=item.sid%></td>
                <td><a href="/detail/<%=item.sid%>"><%=item.sname%></a></td>
                <td><%=item.sage%></td>
                <td><%=item.sphone%></td>
                <td><%=item.sclass%></td>
                <td><a href="/del/<%=item.sid%>">删除</a>
                    <a href="/update/<%=item.sid%>">修改</a>
                </td>
                
            </tr>
        <%});%>
        
    </table>
    <script>
        let msg = document.getElementById("msg")
        let quit = document.getElementById("quit")
        let tname = sessionStorage.getItem("tname")
        if(tname){
            msg.innerHTML="欢迎"+tname+"老师"
            quit.innerHTML="<a href='/quit'>退出登录<a>"
        }else{
            msg.innerHTML="<a href='/login'>登录</a>"
        }
        quit.onclick=function(){
            sessionStorage.clear()
        }
    </script>
</body>
</html>